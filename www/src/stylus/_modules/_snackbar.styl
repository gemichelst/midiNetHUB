/* The snackbar - position it at the bottom and in the middle of the screen */
#snackbar
	min-width 22.5vh
	margin-left -11.25vh
	background-color rgba(40,49,65,0.81)
	text-align center
	border-radius 2em
	border 0.75px solid #747a86
	padding 8px
	position fixed
	z-index 1
	left 50%
	opacity 0
	bottom -10vh
	box-shadow 0px 8px 10px -5px rgba(255, 255, 255, 0.2), 0px 16px 24px 2px rgba(0, 0, 0, 0.14), 0px 6px 30px 5px rgba(0, 0, 0, 0.12)
	.column
		column(1/2, $cycle: 2)
		float left
		p.text,
		p.text-points
			margin 0em 0em 0em 0em
			float left
			font-family BMW, 'sans-serif'
			font-weight 100
			font-size 1em
			line-height 1.75em
			padding-left 2.25em
			color rgba(255,255,255,0.75)
			// font-weight 600
			// font-size 1.25em
			// line-height 1.5em
			// padding-left 1.25em
		#text-points
			padding-left 0em !important

